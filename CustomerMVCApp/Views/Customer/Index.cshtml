@model List<CustomerMVCApp.Models.Customer>

<h2>Customer List</h2>
<a href="@Url.Action("Create")">Add Customer</a>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.FirstName</td>
            <td>@customer.LastName</td>
            <td>@customer.Email</td>
            <td>@customer.Phone</td>
            <td>
                <a href="@Url.Action("Edit", new { id = customer.Id })">Edit</a> |
                <a href="@Url.Action("Delete", new { id = customer.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
